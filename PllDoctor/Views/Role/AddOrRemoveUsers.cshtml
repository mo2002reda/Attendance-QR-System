@using PllDoctor.DTO
@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleId = ViewBag.RoleId;
}
<h1 style="color:black; font-size: 45px; font-weight: bold;">All Users</h1>

<form asp-action="AddOrRemoveUsers" asp-route-roleid="@roleId" style="background-color: lightblue; padding: 20px;">
    
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check form-switch table-hover">
            <input class="form-check-input" asp-for="@Model[i].IsSelected" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" asp-for="@Model[i].IsSelected" style="color: darkblue;font-size: 18px;">@Model[i].UserName</label>
        </div>
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />

    }
    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-action="Edit" class="btn btn-info">Cancle</a>
    </div>

</form>




