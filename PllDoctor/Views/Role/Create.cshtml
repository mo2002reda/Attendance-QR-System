@model RoleViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="color:black; font-size: 45px; font-weight: bold;">Add New Role</h1>
<form asp-action="Create" asp-controller="Role" >
    <div class="form-group">
        <label asp-for="RoleName" class="form-label" style="color:black; font-size: 24px; font-weight: bold;">Role's Name</label>
        <input class="form-control" asp-for="RoleName">
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <br />
    <br />
    <input type="submit" value="Add" class="btn btn-success" /> |
    <a asp-action="Index" class="btn btn-info">Cancle</a>
</form>
