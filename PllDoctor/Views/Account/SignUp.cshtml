@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<header>
	<style>
		.text-danger {
			color: #dc3545;
			font-weight: bold;
		}
	</style>
</header>
			<h1 class="text-center" style="color: black; font-weight: bold;">SignUp</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-controller="Account" asp-action="SignUp" >
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
			<input class="text email" type="email" asp-for=@Model.Email placeholder="Email" required="" />
			<br/>
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
			<input class="text" type="text" asp-for=@Model.Name placeholder="Name" required="">
			<br/>
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
			<input class="text" type="password" asp-for=@Model.Password placeholder="Password" required="">
			<br/>
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
			<input class="text w3lpass" type="password" asp-for=@Model.ConfirmPassword placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="@Model.IsActive" type="checkbox" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
					<span asp-validation-for="@Model.IsActive" class="text-danger"></span>
				</label>
				
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>I Allready have an Account <a href="/Account/Login"> Login Now!</a></p>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

