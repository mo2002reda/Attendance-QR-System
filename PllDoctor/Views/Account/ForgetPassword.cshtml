@using PllDoctor.Models
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<h1 class="text-center" style="color: black; font-weight: bold;">ForgetPassword</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-controller="Account" asp-action="ForgetPassword">
			<div asp-validation-summary="All"></div>
			<input class="text email" type="email" asp-for=@Model.Email placeholder="Email" required="">

			<input type="submit" value="Forget Password">
		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}