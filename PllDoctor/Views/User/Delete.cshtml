@using PllDoctor.Views.Account
@model UserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete @Model.Email  From Application</h1>
<body>
    <form asp-action="Delete">
        <div class="form-group">
            <label asp-for="Id" class="form-label">Id</label>
            <input readonly class="form-control" asp-for="Id">
        </div>
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name</label>
            <input readonly class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label>
            <input readonly class="form-control" asp-for="Email">
        </div>
        <br />
        <br />
        <input type="submit" value="Delete" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-light">Cancle</a>
    </form>
</body>

